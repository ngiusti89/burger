<h1>Eat-Da-Burger!</h1>
<div class="container">
    <div class="row">
        <div class="col-md-4" id="burgers">
            <h3>Burgers</h3>
            <ul>
                {{#each burger}}
                {{#unless this.devoured}}
                <li>
                    {{this.id}}
                    {{this.burger_name}}
                    <form action="/{{this.id}}?_method=PUT" method="POST">
                        <input type="hidden" name="devoured" value="true">
                        <button class="btn-primary" type="submit">Devour it!</button>
                    </form>
                </li>
                {{/unless}}
                {{/each}}
            </ul>
        </div>
        <div class="col-md-4" id="devoured">
            <h3>Devoured</h3>
            {{#each burgers}}
            {{#if this.devoured}}
            <li>
                {{this.id}}
                {{this.burger_name}}
            </li>
            {{/if}}
            {{/each}}
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            <h3>Add a burger!</h3>
            <form class="create-form">
                <div class="form-group">
                    <label for="newBurger">Burger</label>
                    <input type="text" id="newBurger" name="name">
                </div>
                <button type="submit">Add Burger</button>
            </form>
        </div>
    </div>
</div>